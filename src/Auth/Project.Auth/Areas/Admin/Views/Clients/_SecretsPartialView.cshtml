@model List<ClientSecret>
@{
    int rowNo = 0;
}




<div class="modal fade" id="secrets-modal" tabindex="-1" role="dialog" aria-labelledby="secretsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="card-search-bar">
                    <h5 class="modal-title" id="secretsModalLabel">لیست سکرت‌ها</h5>
                </div>

                <div class="card-tools">
                    <button type="button" class="left btn btn-primary btn-sm" data-toggle="ajax-modal" data-target="#addSecret-modal" data-url="@Url.Action("AddSecret", "Clients", new { Area = "Admin", id = ViewData["ClientId"] })">
                        <i class="fa fa-plus"></i> افزودن
                    </button> | 
                    <button type="button" class="left btn btn-danger btn-sm" data-toggle="ajax-modal" data-target="#removeAllClientSecrets-modal" data-url="@Url.Action("RemoveAllClientSecrets", "Clients", new { Area = "Admin", id = ViewData["ClientId"] })">
                        <i class="fa fa-trash"></i> حذف همه
                    </button>

                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
            <div class="modal-body">
                <div id="datatable" data-url="/Admin/Users/Secrets">
                    <div class="card-body table-responsive p-0">
                        <table class="table table-head-fixed">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>نوع</th>
                                    <th>پسوورد کد شده</th>
                                    <th>توضیحات</th>
                                    <th>تاریخ انقضا</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @(rowNo += 1)
                                        </td>
                                        <td>@item.Type</td>
                                        <td>@item.Value</td>
                                        <td>@item.Description</td>
                                        <td>@item.Expiration</td>
                                        <td>
                                            <form onsubmit="return confirm('آیا از حذف این رکورد اطمینان دارید؟')" method="post" asp-area="Admin" asp-controller="Clients" asp-action="DeleteSecret" asp-route-id="@item.Id.ToString()">
                                                <button type="submit" class="btn btn-sm btn-default">
                                                    <i class="fa fa-trash text-danger" data-toggle="tooltip" data-placement="top" title="حذف"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">بستن</button>
            </div>
        </div>
    </div>
</div>




                