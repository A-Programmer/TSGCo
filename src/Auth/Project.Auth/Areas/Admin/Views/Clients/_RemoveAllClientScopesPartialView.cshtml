@model int
<div class="modal fade" id="removeAllClientScopes-modal" tabindex="-1" role="dialog" aria-labelledby="removeAllClientScopesModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title f-right" id="removeAllClientScopesModalLabel">حذف تمام Scope های کلاینت</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <partial name="_Message" />
                <form asp-action="RemoveAllClientScopes">
                    <input type="hidden" value="@Model" />
                    آیا از حذف تمام Scope ها اطمینان دارید؟
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" data-dismiss="modal">انصراف</button>
                <button type="button" data-save="modal" class="btn btn-primary">تایید</button>
            </div>
        </div>
    </div>
</div>