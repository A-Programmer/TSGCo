@model Guid
<div class="modal fade" id="changestatus-modal" tabindex="-1" role="dialog" aria-labelledby="changestatusModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title f-right" id="changestatusModalLabel">تغییر وضعیت کاربر</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <partial name="_Message" />
                <form asp-action="ChangeStatus">
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <input type="hidden" value="@Model" />
                        آیا از انجام عملیات تغییر وضعیت مطمعن هستید؟
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" data-dismiss="modal">انصراف</button>
                <button type="button" data-save="modal" class="btn btn-primary">تایید</button>
            </div>
        </div>
    </div>
</div>