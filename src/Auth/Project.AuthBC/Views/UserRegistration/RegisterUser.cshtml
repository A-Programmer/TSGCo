@model RegisterUserViewModel

<div class="user-registration-page">
    <div class="page-header">
        <h1>User Registration</h1>
    </div>
    <partial name="_ValidationSummary" />
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">User Registration</h3>
                </div>
                <div class="panel-body">
                    <form asp-controller="UserRegistration" asp-action="RegisterUser" method="post">
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Username"></label>
                                <input class="form-control" placeholder="Username" asp-for="Username" autofocus>
                            </div>

                            <div class="form-group">
                                <label asp-for="Password"></label>
                                <input type="password" class="form-control" placeholder="Password"
                                        asp-for="Password" autocomplete="off">
                            </div>

                            <div class="form-group">
                                <label asp-for="Firstname"></label>
                                <input class="form-control" placeholder="Firstname" asp-for="Firstname">
                            </div>

                            <div class="form-group">
                                <label asp-for="Lastname"></label>
                                <input class="form-control" placeholder="Lastname" asp-for="Lastname">
                            </div>

                            <div class="form-group">
                                <label asp-for="Address"></label>
                                <input class="form-control" placeholder="Address" asp-for="Address">
                            </div>

                            <div class="form-group">
                                <label asp-for="Country"></label>
                                <input class="form-control" placeholder="Country" asp-for="Country">
                            </div>

                            <div class="form-group">
                                <button class="btn btn-primary" name="register" value="register">Register</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>