<!-- start testimonials-section -->
<section class="testimonials-section">
    <div class="container">
        <div class="row">
            <div class="col col-lg-6 col-lg-offset-3">
                <div class="section-title-s4">
                    <h2>@CustomerCommetsSestion.CustomersCommentTitle</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col col-md-4">
                <div class="testimonial-left-img-holder">
                    <img src="assets/images/testimonials/man.png" alt>
                </div>
            </div>
            <div class="col col-md-8">
                <div class="testimonial-grids testimonial-slider clearfix">
                    @foreach(var comment in Comments)
                    {
                        <div class="grid">
                            <div class="quote">
                                <i class="fi flaticon-quote"></i>
                                <p>@comment.Comment</p>
                            </div>
                            <div class="client-info">
                                <div class="img-holder">
                                    <img src="@comment.ImageUrl" alt>
                                </div>
                                <div class="details">
                                    <h5>@comment.FullName</h5>
                                    <p>@comment.Role</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>



@code {
    public GeneralInformation CustomerCommetsSestion { get; set; }
    public List<CustomerComment> Comments { get; set; }
    

    protected override Task OnInitializedAsync()
    {
        CustomerCommetsSestion = FakeData.GetGeneralInformation();
        Comments = FakeData.GetCustomerComments();
        return base.OnInitializedAsync();
    }
}