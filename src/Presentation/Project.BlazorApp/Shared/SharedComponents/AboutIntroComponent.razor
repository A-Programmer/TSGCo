
<section class="about-us-section section-padding">
    <div class="container">
        <div class="row">
            <div class="col col-md-6">
                <div class="section-title">
                    <h2>@AboutIntro.HomeAboutIntroTitle</h2>
                </div>
                <div class="details">
                    @((MarkupString)AboutIntro.HomeAboutIntroContent)
                    <div class="btns">
                        <a href="/contact" class="theme-btn">CONTACT US</a>
                        <a href="/about" class="theme-btn-s3">MORE ABOUT US</a>
                    </div>
                </div>
            </div>
            <div class="col col-md-6">
                <div class="right-col">
                    <div class="img-holder">
                        <img src="@AboutIntro.HomeAboutIntroImageUrl" alt>
                    </div>
                    <div class="video-holder">
                        <a href="https://www.aparat.com/v/uCcEJ" class="hero-video-btn video-btn"  data-type="iframe" tabindex="0"><i class="fi flaticon-play-button"></i>Watch our intro video</a> 
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    public GeneralInformation AboutIntro { get; set; }
    protected override Task OnInitializedAsync()
    {
        AboutIntro = FakeData.GetGeneralInformation();
        return base.OnInitializedAsync();
    }
}