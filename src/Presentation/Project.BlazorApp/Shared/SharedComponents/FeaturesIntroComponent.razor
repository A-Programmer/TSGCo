
<section class="why-choose-section section-padding">
    <div class="container">
        <div class="row">
            <div class="col col-lg-6 col-lg-offset-3 col-md-8 col-md-offset-2">
                <div class="section-title-s3">
                    <h2>@HomeFeatures.HomeFeaturesTitle</h2>
                    @((MarkupString)HomeFeatures.HomeFeaturesText)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col col-xs-12">
                <div class="why-choose-grids clearfix">
                    @foreach(var feature in Features)
                    {
                        <div class="grid">
                            @((MarkupString)feature.Icon)
                            <h3>@feature.Title</h3>
                            @((MarkupString)feature.Text)
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    public GeneralInformation HomeFeatures { get; set; }
    public List<Feature> Features { get; set; }
    

    protected override Task OnInitializedAsync()
    {
        HomeFeatures = FakeData.GetGeneralInformation();
        Features = FakeData.GetFeatures();
        return base.OnInitializedAsync();
    }
}